<div class="queue-management">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="mb-0 text-primary"><i class="fas fa-tasks me-2"></i>Queue Management</h3>
        <a href="/admin/random-request" class="btn btn-warning btn-hover">
            <i class="fas fa-random me-2"></i>I Don't Know Where to Begin!
        </a>
    </div>

    <!-- Queue Table -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light-primary">
                        <tr>
                            <th class="ps-4"><i class="fas fa-filter me-2"></i>Request Type</th>
                            <th><i class="fas fa-clock me-2"></i>Queue Length</th>
                            <th><i class="fas fa-hourglass-half me-2"></i>Estimated Completion</th>
                            <th class="pe-4 text-end"><i class="fas fa-cogs me-2"></i>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each queueDetails}}
                        <tr class="queue-item">
                            <td class="ps-4 fw-medium">{{this.type}}</td>
                            <td>
                                <span class="badge bg-primary-subtle text-primary py-2 px-3">
                                    {{this.queueLength}} Pending
                                </span>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-stopwatch me-2 text-muted"></i>
                                    <span class="text-{{#if this.isUrgent}}danger{{else}}success{{/if}}">
                                        {{this.estimatedCompletion}}
                                    </span>
                                </div>
                            </td>
                            <td class="pe-4 text-end">
                                <a href="/admin/queue/{{this.type}}" 
                                   class="btn btn-primary btn-sm btn-pill">
                                    <i class="fas fa-eye me-2"></i>View Requests
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
.queue-management {
    background: white;
    border-radius: 12px;
    padding: 1.5rem;
}

.bg-light-primary {
    background: linear-gradient(135deg, #f8f9fa 0%, #e3f2fd 100%);
}

.queue-item:hover {
    background-color: #f8f9fa;
    transform: translateX(4px);
    transition: all 0.3s ease;
}

.btn-hover {
    transition: all 0.3s ease;
    padding: 0.5rem 1.25rem;
    border-radius: 8px;
}

.btn-hover:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
}

.btn-pill {
    border-radius: 50px;
    padding: 0.375rem 1.25rem;
}

.table-hover tbody tr {
    cursor: pointer;
    transition: all 0.3s ease;
}

.table td, .table th {
    vertical-align: middle;
    padding: 1rem;
}
</style>

<!-- Required Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">