<div class="container-fluid px-4">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold text-primary mb-1">Academic Administration Dashboard</h1>
            <p class="text-muted">Head Department of Student Affairs</p>
        </div>
        <div class="badge bg-primary-subtle text-primary fs-6 p-3">
            <i class="fas fa-user-shield me-2"></i>Administrator Access
        </div>
    </div>

    <!-- Stats Cards Row -->
    <div class="row g-4">
        <!-- Total Users Card -->
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card stat-card bg-academic-primary hover-lift">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="text-white-50 mb-2">Registered Users</div>
                            <h2 class="text-white mb-0 display-5">{{totalUsers}}</h2>
                            <div class="text-white-50 mt-2" style="font-size:0.9rem">
                                <i class="fas fa-arrow-up text-success me-1"></i>5.2% from last semester
                            </div>
                        </div>
                        <div class="icon-bg">
                            <i class="fas fa-users-graduate fa-3x text-white-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Active Courses Card -->
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card stat-card bg-academic-warning hover-lift">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="text-dark mb-2">Active Courses</div>
                            <h2 class="text-dark mb-0 display-5">45</h2>
                            <div class="text-dark mt-2" style="font-size:0.9rem">
                                <i class="fas fa-plus-circle text-success me-1"></i>12 new this term
                            </div>
                        </div>
                        <div class="icon-bg">
                            <i class="fas fa-book-open fa-3x text-dark-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Upcoming Appointments Card -->
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card stat-card bg-academic-info hover-lift">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="text-white-50 mb-2">Today's Appointments</div>
                            <h2 class="text-white mb-0 display-5">18</h2>
                            <div class="text-white-50 mt-2" style="font-size:0.9rem">
                                <i class="fas fa-clock me-1"></i>3 in progress
                            </div>
                        </div>
                        <div class="icon-bg">
                            <i class="fas fa-calendar-alt fa-3x text-white-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Departments Card -->
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card stat-card bg-academic-success hover-lift">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="text-white-50 mb-2">Active Departments</div>
                            <h2 class="text-white mb-0 display-5">12</h2>
                            <div class="text-white-50 mt-2" style="font-size:0.9rem">
                                <i class="fas fa-building me-1"></i>5 academic divisions
                            </div>
                        </div>
                        <div class="icon-bg">
                            <i class="fas fa-university fa-3x text-white-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions Section -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0"><i class="fas fa-rocket me-2 text-primary"></i>Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex gap-3">
                        <button class="btn btn-academic-primary btn-hover">
                            <i class="fas fa-user-plus me-2"></i>Add Student
                        </button>
                        <button class="btn btn-academic-success btn-hover">
                            <i class="fas fa-file-pdf me-2"></i>Generate Report
                        </button>
                        <button class="btn btn-academic-warning btn-hover">
                            <i class="fas fa-bell me-2"></i>Send Alert
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .stat-card {
        border: none;
        border-radius: 15px;
        transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        overflow: hidden;
    }

    .hover-lift:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }

    .bg-academic-primary { background: linear-gradient(135deg, #2c3e50, #3498db); }
    .bg-academic-success { background: linear-gradient(135deg, #27ae60, #2ecc71); }
    .bg-academic-warning { background: linear-gradient(135deg, #f1c40f, #f39c12); }
    .bg-academic-info { background: linear-gradient(135deg, #2980b9, #3498db); }

    .icon-bg {
        padding: 15px;
        background: rgba(255,255,255,0.15);
        border-radius: 12px;
        margin-left: 20px;
    }

    .btn-hover {
        transition: all 0.3s ease;
        padding: 12px 25px;
        border-radius: 8px;
        font-weight: 500;
    }

    .btn-hover:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .btn-academic-primary { background: #2c3e50; color: white; }
    .btn-academic-success { background: #27ae60; color: white; }
    .btn-academic-warning { background: #f1c40f; color: black; }
</style>

<!-- Required Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">