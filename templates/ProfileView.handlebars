<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Profile</title>
    <link href="/static/css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        .profile-card {
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            transition: transform 0.3s ease;
        }
        
        .notification-item {
            border-left: 3px solid #4e73df;
            transition: all 0.3s ease;
            padding: 1rem;
            margin-bottom: 0.5rem;
        }
        
        .password-form {
            background-color: #f8f9fa;
            border-radius: 10px;
            padding: 1.5rem;
        }
        
        .info-badge {
            background-color: #e9ecef;
            border-radius: 8px;
            padding: 0.8rem;
            margin-bottom: 1rem;
        }

        .modal-backdrop {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.5);
            z-index: 1040;
        }

        .modal-content {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: white;
            z-index: 1050;
            width: 90%;
            max-width: 500px;
            border-radius: 10px;
            padding: 20px;
        }

        .btn-close {
            border: none;
            background: transparent;
            font-size: 1.5rem;
            color: white;
        }
    </style>
</head>

<body class="bg-light">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Profile Card -->
                <div class="card profile-card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0"><i class="fas fa-user-circle me-2"></i>Student Profile</h3>
                    </div>
                    
                    <div class="card-body">
                        <!-- Read-only Information -->
                        <div class="info-badge">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <h5><i class="fas fa-user-tag me-2"></i>Username</h5>
                                    <p class="mb-0">{{username}}</p>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <h5><i class="fas fa-envelope me-2"></i>Email</h5>
                                    <p class="mb-0">{{email}}</p>
                                </div>
                                <div class="col-md-6">
                                    <h5><i class="fas fa-phone me-2"></i>Phone</h5>
                                    <p class="mb-0">{{phone}}</p>
                                </div>
                            </div>
                        </div>

                        <!-- Password Reset Section -->
                        <div class="password-form mb-4">
                            <h4 class="mb-4"><i class="fas fa-lock me-2"></i>Password Management</h4>
                            <button class="btn btn-primary" onclick="showEditPassword()">
                                <i class="fas fa-key me-2"></i>Change Password
                            </button>
                        </div>

                        <!-- Notifications Section -->
                        <div class="notifications-section">
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <h4><i class="fas fa-bell me-2"></i>Notifications</h4>
                                <button id="delete-notifications-btn" class="btn btn-danger">
                                    <i class="fas fa-trash me-2"></i>Clear All
                                </button>
                            </div>
                            
                            <div id="notifications-list">
                                {{#each notifications}}
                                <div class="notification-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <i class="fas fa-info-circle me-2 text-primary"></i>
                                            {{this.message}}
                                        </div>
                                        <small class="text-muted">{{this.createdAt}}</small>
                                    </div>
                                </div>
                                {{/each}}
                                {{^notifications}}
                                <div class="text-center text-muted py-4">
                                    No new notifications
                                </div>
                                {{/notifications}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Password Reset Modal -->
    <div id="edit-password" class="spa-page" style="display: none;">
        <div class="modal-backdrop" onclick="showLandingPage()"></div>
        <div class="modal-content shadow-lg">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title"><i class="fas fa-key me-2"></i>Change Password</h5>
                <button type="button" class="btn-close" onclick="showLandingPage()">Ã—</button>
            </div>
            <div class="modal-body">
                <!-- Content populated by JavaScript -->
            </div>
        </div>
    </div>

    <script>
    function showEditPassword() {
        const modal = document.getElementById('edit-password');
        modal.style.display = 'block';
        
        const html = `
            <div class="mb-3">
                <label class="form-label"><i class="fas fa-lock me-2"></i>Current Password</label>
                <input type="password" class="form-control" id="oldPass" required>
            </div>
            <div class="mb-3">
                <label class="form-label"><i class="fas fa-key me-2"></i>New Password</label>
                <input type="password" class="form-control" id="newPass" required>
            </div>
            <div class="mb-4">
                <label class="form-label"><i class="fas fa-check-circle me-2"></i>Confirm Password</label>
                <input type="password" class="form-control" id="confNewPass" required>
            </div>
            <div class="alert alert-danger" id="passErrMsg" style="display: none;"></div>
            <div class="d-flex gap-2 justify-content-end">
                <button type="button" class="btn btn-secondary" onclick="showLandingPage()">
                    <i class="fas fa-times me-2"></i>Cancel
                </button>
                <button type="button" class="btn btn-primary" onclick="updatePassword()">
                    <i class="fas fa-save me-2"></i>Update Password
                </button>
            </div>
        `;
        
        document.querySelector('#edit-password .modal-body').innerHTML = html;
    }

    async function updatePassword() {
        const oldPass = document.getElementById('oldPass').value;
        const newPass = document.getElementById('newPass').value;
        const confNewPass = document.getElementById('confNewPass').value;
        const errMsg = document.getElementById('passErrMsg');
        const username = "{{username}}";

        // Reset error message
        errMsg.style.display = 'none';
        errMsg.textContent = '';

        try {
            // Verify current password
            const verifyResponse = await fetch(`/api/user/${username}/password-verify`, {
                method: "POST",
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ oldPassword: oldPass })
            });

            const verifyResult = await verifyResponse.json();
            
            if (!verifyResult.flag) {
                throw new Error('Current password is incorrect');
            }

            if (newPass !== confNewPass) {
                throw new Error('New passwords do not match');
            }

            if (newPass === oldPass) {
                throw new Error('New password must be different from current password');
            }

            // Update password
            const updateResponse = await fetch(`/api/user/${username}/password`, {
                method: "PATCH",
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ newPassword: newPass })
            });

            if (updateResponse.ok) {
                alert('Password updated successfully!');
                showLandingPage();
            } else {
                throw new Error('Failed to update password');
            }

        } catch (error) {
            errMsg.textContent = error.message;
            errMsg.style.display = 'block';
        }
    }

    function showLandingPage() {
        document.getElementById('edit-password').style.display = 'none';
    }

    // Notifications Deletion
    document.getElementById('delete-notifications-btn').addEventListener('click', async () => {
        if (confirm('Are you sure you want to delete all notifications?')) {
            try {
                const response = await fetch('/api/notifications', { method: 'DELETE' });
                
                if (response.ok) {
                    document.getElementById('notifications-list').innerHTML = `
                        <div class="text-center text-muted py-4">
                            No new notifications
                        </div>
                    `;
                } else {
                    alert('Failed to clear notifications');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred');
            }
        }
    });
    </script>
</body>
</html>